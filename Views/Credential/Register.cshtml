@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@model RegisterViewModel

<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Credential" asp-action="Register"  method="post" class="form-horizontal" role="form">
                <h4>Register</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="col-md-10 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="0123456" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
               
                <div class="form-group">
                    <label asp-for="Password" class="col-md-10 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Password" class="form-control" placeholder="Abc*2004#" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="col-md-10 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Abc*2004#" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="col-md-10 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Address" class="form-control" placeholder="Viet Nam" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-4">
        <section>
            <h4>Login other</h4>
            <hr />
            <button class="btn btn-primary" onclick="loginWithGoogle()">Login with Google</button>
        </section>
    </div>
</div>

<script type="module" src="~/js/auth.js" asp-append-version="true"></script>