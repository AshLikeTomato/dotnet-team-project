@model DotnetProject2025.Models.EditViewModel

@{
    ViewData["Title"] = "Edit Account";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">

            <form method="post" action="/Credential/Delete"
                onsubmit="return confirm('Are you sure you want to delete this account?');">
                <input type="hidden" asp-for="UserId" id="DeleteUserId" />
                <button type="submit" class="btn btn-danger">Delete Account</button>
            </form>
            <div class="mt-2" style="width: 70vw;">

                <form asp-action="Edit" method="post" enctype="multipart/form-data" class="mb-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 "></div>
                    <input type="hidden" asp-for="UserId" id="EditUserId" />

                    <div class="d-flex justify-content-around">

                        <div class="">

                            <div class="mb-3">
                                <label asp-for="NewPhoneNumber" class="form-label">New Phone Number</label>
                                <input asp-for="NewPhoneNumber" class="form-control pe-5" />
                                <span asp-validation-for="NewPhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="NewPassword" class="form-label">New Password</label>
                                <input asp-for="NewPassword" type="password pe-5" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" type="email" class="form-control pe-5" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>


                        <!-- Trường mới cho sản phẩm -->
                        <div class="">

                            <div class="mb-3">
                                <label asp-for="ProductName" class="form-label">Product Name</label>
                                <input asp-for="ProductName" class="form-control" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ProductDescription" class="form-label">Product Description</label>
                                <textarea asp-for="ProductDescription" class="form-control"></textarea>
                                <span asp-validation-for="ProductDescription" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ProductPrice" class="form-label">Product Price</label>
                                <input asp-for="ProductPrice" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="ProductPrice" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ProductImage" class="form-label">Product Image</label>
                                <input asp-for="ProductImage" type="file" class="form-control" />
                                <span asp-validation-for="ProductImage" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center p-3">

                        <button type="submit" class="btn btn-primary">Save Changes & Post Product</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
